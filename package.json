{
	"scripts": {
		"sass": "npx sass src/sass/app.scss assets/app.css",
		"sass-watch": "npx sass --watch src/sass/app.scss assets/app.css",
		"build": "npm run sass && npx babel src/js --out-file assets/app.js --presets react-app/prod",
		"watch": "npx babel --watch src/js -d assets --presets react-app/prod",
		"serve": "hs .",
		"start": "concurrently --kill-others \"npm run watch\" \"npm run sass-watch\"  \"npm run serve\""
	},
	"dependencies": {},
	"devDependencies": {
		"tinycolor2": "^1.4.1",
		"webpack": "^4.29.3",
		"sass": "^1.17.0",
		"babel-cli": "^6.26.0",
		"babel-preset-react-app": "^3.1.2",
		"concurrently": "^4.1.0",
		"http-server": "^0.11.1"
	},
	"standard": {
		"globals": [
			"React",
			"ReactDOM"
		]
	}
}
